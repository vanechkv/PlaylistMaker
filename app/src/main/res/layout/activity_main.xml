<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layout">

            <TextView
                style="@style/MainTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_padding_margin"
            android:paddingTop="24dp"
            android:paddingBottom="28dp">

            <Button
                android:id="@+id/search_button"
                style="@style/MainButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_free_space"
                android:layout_weight="1"
                android:text="@string/search"
                app:icon="@drawable/vector_search" />

            <Button
                android:id="@+id/playlist_button"
                style="@style/MainButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_free_space"
                android:layout_weight="1"
                android:text="@string/playlist"
                app:icon="@drawable/vector_playlist" />

            <Button
                android:id="@+id/settings_button"
                style="@style/MainButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_free_space"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:text="@string/settings"
                app:icon="@drawable/vector_settings" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
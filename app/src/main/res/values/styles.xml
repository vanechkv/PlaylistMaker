<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutStyle">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FrameLayoutSettingsStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MainTitleTextStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_title</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_title</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:paddingHorizontal">@dimen/margin_padding_title</item>
        <item name="android:paddingTop">@dimen/margin_padding_top</item>
        <item name="android:paddingBottom">@dimen/margin_padding_title</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsComponentTextStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginVertical">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsComponentIconStyle">
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SwitchSettingStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingTop">@dimen/switch_padding_top</item>
        <item name="android:paddingBottom">@dimen/switch_padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/switch_padding_horizontal</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginBottom">@dimen/default_padding_margin</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SearchIconStyle">
        <item name="android:layout_marginVertical">@dimen/search_icon_margin_vertical</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CloseIconStyle">
        <item name="android:layout_marginVertical">@dimen/close_icon_margin_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/close_icon_margin_horizontal</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchLinearLayoutStyle">
        <item name="android:background">@drawable/bg_search_box</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:layout_marginStart">@dimen/icon_button_padding</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_track</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TrackInfoTextStyle">
        <item name="android:layout_marginBottom">@dimen/margin_vertical_track</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/track_text_size</item>
    </style>

    <style name="ErrorButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/button_radius_54dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_24dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/button_error_text_size</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TrackTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="TrackArtistTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_error_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="TitleMoreInfoStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/agate_gray</item>
    </style>

    <style name="TrackMoreInfoStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TabPlaylistStyle">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>